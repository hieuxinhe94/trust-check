<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_3dp"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_4dp"
    android:id="@+id/warning_row_item"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_baseline_dangerous_24"
                app:tint="@color/color_text_orange_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="+84967356524 (4)"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_sm" />

            <TextView
                android:id="@+id/textShortDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:text="Today 09:43 AM"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_16sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="Scam Alert"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>

</LinearLayout>